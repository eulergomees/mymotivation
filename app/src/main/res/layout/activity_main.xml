<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <View
        android:id="@+id/view_phrases_menu"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@color/purple" />

    <ImageView
        android:id="@+id/imageview_all"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/view_phrases_menu"
        android:layout_alignBottom="@+id/view_phrases_menu"
        android:layout_marginStart="32dp"
        android:contentDescription="All content"
        android:src="@drawable/ic_all"
        app:tint="@color/black" />

    <ImageView
        android:id="@+id/imageview_happy"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/view_phrases_menu"
        android:layout_alignBottom="@+id/view_phrases_menu"
        android:layout_centerHorizontal="true"
        android:contentDescription="Happy"
        android:src="@drawable/ic_happy"
        app:tint="@color/black" />

    <ImageView
        android:id="@+id/imageview_sunny"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/view_phrases_menu"
        android:layout_alignBottom="@+id/view_phrases_menu"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="32dp"
        android:contentDescription="Light mode"
        android:src="@drawable/ic_sunny"
        app:tint="@color/black" />

    <TextView
        android:id="@+id/textview_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_phrases_menu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textview_phrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="8dp"
        android:gravity="center"
        android:text="Olá, Kotlin! Olá, Kotlin!Olá, Kotlin! Olá, Kotlin!Olá, Kotlin! "
        android:textSize="20sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/view_divider"
        android:layout_width="128dp"
        android:layout_height="4dp"
        android:layout_below="@+id/textview_phrase"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@color/purple"
        android:elevation="5dp" />

    <Button
        android:id="@+id/button_new_phrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:textSize="20sp"
        android:backgroundTint="@color/purple"
        android:text="Nova Frase"
        android:textColor="@color/white"/>

</RelativeLayout>